    function pad(number, length = 2) {
        while (number.toString().length < length) {
            number = "0" + number;
        }
        return number;
    }
    function euro(number){
        number = Math.round(number*(100))/(100)
        let split = number.toString().split('.')
        if(!split[1]){
            return number+'.00 €'
        }
        else if(split[1].length < 2){
            return number+'0 €'
        }
        return number+' €'
    }